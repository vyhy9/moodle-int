{
  "name": "english-learning-center",
  "version": "1.0.0",
  "description": "English Learning Center Platform with Moodle Integration",
  "main": "index.js",
  "scripts": {
    "start": "cd backend && nest start",
    "start:dev": "cd backend && nest start --watch --preserveWatchOutput",
    "start:debug": "cd backend && nest start --debug --watch",
    "start:prod": "cd backend && node dist/main",
    "build": "cd backend && nest build",
    "format": "prettier --write \"backend/src/**/*.ts\"",
    "lint": "eslint \"{backend/src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cd backend && jest",
    "test:watch": "cd backend && jest --watch",
    "test:cov": "cd backend && jest --coverage",
    "test:debug": "cd backend && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cd backend && jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "axios": "^1.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "mongoose": "^7.0.0",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.7.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.3.1",
    "@types/passport": "^1.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
